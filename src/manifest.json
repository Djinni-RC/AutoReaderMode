{
  "manifest_version": 3,
  "name": "Auto Reader Mode",
  "version": "1.1",
  "description": "Automatically enables reader mode on user-specified websites.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts":[{
    "matches":["<all_urls>"],
    "js":["grab_dom_content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["utils.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
